<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view -->
    <record id="view_incidencia_form" model="ir.ui.view">
        <field name="name">gestion.incidencia.form</field>
        <field name="model">gestion.incidencia</field>
        <field name="arch" type="xml">
            <form string="Incidencia">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="view_incidencia_list" model="ir.ui.view">
        <field name="name">gestion.incidencia.list</field>
        <field name="model">gestion.incidencia</field>
        <field name="arch" type="xml">
            <list string="Incidencias">
                <field name="name"/>
                <field name="fecha"/>
            </list>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_incidencias" model="ir.actions.act_window">
        <field name="name">Incidencias</field>
        <field name="res_model">gestion.incidencia</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_gestion_incidencias" name="GestiÃ³n de Incidencias" sequence="10"/>
    <menuitem id="menu_incidencias" name="Incidencias" parent="menu_gestion_incidencias" action="action_incidencias" sequence="10"/>
</odoo>
